@model WebshopDemo.Sales.Commands.SetPrice.SetPriceCommand

@{
    ViewData["Title"] = "Set price";
}

<div class="text-center">
    <p>ProductID: @Model.ProductID</p>
    <form method="post">
        <table>
            <tr>
                <td>
                    Amount:
                </td>
                <td>
                    <input type="number" asp-for="ProductPrice.Amount" value="0.00" step="0.01">
                </td>
            </tr>
            <tr>
                <td>
                    Currency:
                </td>
                <td>
                    <input type="text" asp-for="ProductPrice.Currency" value="euro">
                </td>
            </tr>
        </table>
        <input type="hidden" name="ProductID" value="@Model.ProductID" />
        <input type="submit" value="Set price" class="submitButton">
    </form>
</div>
